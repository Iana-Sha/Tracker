<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tracker.MainPage">

    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Image Source="emergency_vet.png"/>
            <Label Text="Live Information" VerticalOptions="Center"  HorizontalOptions="Center" FontSize="Large"/>
                <Button x:Name="recentRecord" Text="VIEW LAST RECORD" VerticalOptions="Center"  HorizontalOptions="Center" FontSize="Large" Clicked="recentRecord_Clicked"/>
                <Button x:Name="historyRecords" Text="VIEW HISTORY OF RECORDS" VerticalOptions="Center"  HorizontalOptions="Center" FontSize="Large" Clicked="historyRecords_Clicked"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
