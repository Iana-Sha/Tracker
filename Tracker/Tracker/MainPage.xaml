<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tracker.MainPage">

    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            
            <Label Text="Live Information" VerticalOptions="Center" TextColor="Black" HorizontalOptions="Center" FontSize="35"/>
                <Image Source="fan.png" Margin="0,10,0,10" />
                <Entry x:Name="username"
                 Placeholder="Username"
                 FontSize="Large"
                 />

                <Entry x:Name="password"
                Placeholder="Password"
                FontSize="Large"
                IsPassword="True"
                />
                <Button x:Name="LoginBtn" Text="Login" Margin="5, 25, 5, 5" TextColor="White" BackgroundColor="Orange" HeightRequest="75" FontSize="Large" Clicked="LoginBtn_Clicked"/>
                <Button x:Name="RegisterBtn" Text="Register" Margin="5, 0, 5, 5" TextColor="White" BackgroundColor="Orange" HeightRequest="75" FontSize="Large" Clicked="RegisterBtn_Clicked"/>
                <Label x:Name="error" Text="" VerticalOptions="Center"  HorizontalOptions="Center" FontSize="Large"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
